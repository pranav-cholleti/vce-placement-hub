---
interface Props {
	title: string;
}

const { title } = Astro.props;
---
<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="VCE Placement Hub - The single source of truth for all placement activities." />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-slate-900 text-slate-100 min-h-screen font-sans">
		<header class="bg-slate-950/70 backdrop-blur-sm p-4 sticky top-0 z-50 border-b border-b-slate-700">
			<nav class="max-w-7xl mx-auto flex justify-between items-center">
				<a href="/" class="text-xl font-bold bg-gradient-to-r from-blue-400 to-teal-300 bg-clip-text text-transparent">
					VCE Placement Hub
				</a>
        <div class="hidden md:flex items-center gap-6">
					<a href="/#on-campus" class="text-slate-300 hover:text-white transition-colors">On-Campus</a>
					<a href="/#off-campus" class="text-slate-300 hover:text-white transition-colors">Off-Campus</a>
					<a href="/submit" class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-lg transition-colors text-sm">
						Submit Opportunity
					</a>
				</div>
			</nav>
		</header>
		<main class="max-w-7xl mx-auto p-4 md:p-8">
			<slot />
		</main>
		<footer class="text-center p-4 mt-8 text-slate-500 text-sm border-t border-slate-800">
			Built and maintained by the VCE Student Community.
		</footer>
	</body>
</html>
