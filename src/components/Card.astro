---
interface Props {
    title: string;
    role: string;
    ctc: string;
    stipend: string;
    deadline: string;
    url: string;
}

const { title, role, ctc, stipend, deadline, url } = Astro.props;
---
<a href={url} class="block bg-slate-800/50 p-6 rounded-xl border border-slate-700 hover:border-blue-500 hover:bg-slate-800 transition-all group">
    <h3 class="text-xl font-bold text-slate-100 group-hover:text-blue-400 transition-colors">{title}</h3>
    <p class="text-slate-300 mt-1">{role}</p>
    <div class="mt-4 flex flex-wrap gap-x-4 gap-y-2 text-sm">
        {ctc !== 'N/A' && <span class="bg-green-900/50 text-green-300 px-2 py-1 rounded-full">{ctc}</span>}
        {stipend !== 'N/A' && <span class="bg-yellow-900/50 text-yellow-300 px-2 py-1 rounded-full">{stipend}</span>}
        {deadline !== 'N/A' && (
            <div class="flex items-center gap-2 text-red-400 font-medium">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-alarm-clock"><circle cx="12" cy="13" r="8"/><path d="M12 9v4l2 2"/><path d="M5 3 2 6"/><path d="m22 6-3-3"/></svg>
                <span>Deadline: {deadline}</span>
            </div>
        )}
    </div>
</a>
